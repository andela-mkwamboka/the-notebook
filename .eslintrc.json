{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "angular": true
  },
  "extends": ["angular", "eslint:recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}